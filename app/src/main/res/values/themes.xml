<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ideas" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimarySurface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ideas.Button.TextButton.Dense" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">28dp</item>
    </style>

    <style name="Theme.Ideas.Widget.StatusView" parent="">
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
    </style>
</resources>